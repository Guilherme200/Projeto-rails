<h1><%= t('show', name: t('list.title', count: 1)) %></h1>

<div class="row justify-content-center mb-5">
  <%= image_tag(@list.avatar_url, 
    class: 'img-thumbnail', 
    width: '500', 
    height: '500') if @list.avatar? %>
  </div>

<table class="table table-striped table-hover table-dark bg-dark">

 <tr>
   <th scope="row"><%= t('list.name') %>:</th>
   <td><%= @list.name %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('list.is_bought') %>:</th>
   <td><%= @list.is_bought %></td>
 </tr>

</table>
<%= link_to t('list.products'), list_products_path(@list), class: 'btn btn-outline-secondary', role: :button %>
<%= link_to t('edit'), lists_path(@list), class: 'btn btn-primary', role: :button %>
<%= link_to t('index'), lists_path, class: 'btn btn-outline-secondary', role: :button %>
