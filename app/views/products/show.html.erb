<h1><%= t('listing', name: t('list.product.title', count: 2)) %></h1>

<table class="table table-striped table-hover">

 <tr>
   <th scope="row"><%= t('list.product.name') %>:</th>
   <td><%= @product.name %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('list.product.quantity') %>:</th>
   <td><%= @product.quantity %></td>
 </tr>

</table>

<%= link_to t('edit'), edit_list_product_path(@list, @product), class: 'btn btn-primary', role: :button %>
<%= link_to t('index'), list_products_path(@list), class: 'btn btn-outline-secondary', role: :button %>
