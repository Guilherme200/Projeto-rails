<h1><%= t('listing', name: t('product.title', count: 1)) %></h1>

<table class="table table-striped table-hover">

 <tr>
   <th scope="row"><%= t('product.name') %>:</th>
   <td><%= @product.name %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('product.quantity') %>:</th>
   <td><%= @product.quantity %></td>
 </tr>

</table>

<%= link_to t('edit'), edit_product_path(@product), class: 'btn btn-primary', role: :button %>
<%= link_to t('index'), products_path, class: 'btn btn-outline-secondary', role: :button %>
