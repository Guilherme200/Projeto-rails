<h1><%= t('listing', name: t('product.title', count: 2)) %></h1>

<table class="table table-striped table-hover table-sm">
 <thead>
   <tr>
     <th scope="col"><%= t('product.name') %></th>
     <th scope="col"><%= t('product.quantity') %></th>
     <th scope="col"><%= t('actions') %></th>
   </tr>
 </thead>

 <tbody>
   <% @products.each do |product| %>
     <tr>
       <td><%= product.name %></td>
       <td><%= product.quantity %></td>
<td>
         <div class="btn-group btn-group-sm" role="group">
           <%= link_to t('show'), product, class: 'btn btn-info', role: :button %>
           <%= link_to t('edit'), edit_product_path(product), class: 'btn btn-success', role: :button %>
           <%= link_to t('destroy'), product, method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button %>
         </div>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to t('new', name: t('product.title', count: 1)), new_product_path, class: 'btn btn-primary', role: :button %>
