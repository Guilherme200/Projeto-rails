<h1><%= t('listing', name: t('list.product.title', count: 2)) %></h1>

<table class="table table-striped table-hover table-sm">
 <thead>
   <tr>
     <th scope="col"><%= t('list.product.name') %></th>
     <th scope="col"><%= t('list.product.quantity') %></th>
     <th scope="col"><%= t('actions') %></th>
   </tr>
 </thead>

 <tbody>
   <% @products.each do |product| %>
     <tr>
       <td><%= product.name %></td>
       <td><%= product.quantity %></td>
<td>
         <div class="btn-group btn-group-sm" role="group">
           <%= link_to t('show'), list_product_path(@list, product), class: 'btn btn-info', role: :button %>
           <%= link_to t('edit'), edit_list_product_path(@list, product), class: 'btn btn-success', role: :button %>
           <%= link_to t('destroy'), list_product_path(@list, product), method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button %>
         </div>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to t('new', name: t('product.title', count: 1)), new_list_product_path(@list), class: 'btn btn-primary', role: :button %>
<%= link_to t('back'), lists_path(@list), class: 'btn btn-secondary', role: :button %>