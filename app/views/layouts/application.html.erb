<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to t('Projeto'), root_path, class: 'navbar-brand' %>
    <div class="collapse navbar-collapse">
      <div class="navbar-nav">

       <% if user_signed_in? %>
        <%= link_to current_user.email, '#', class: 'nav-item nav-link' %>
       <%end%> 
      </div>
    </div>

      <%= link_to 'pt-BR', root_path(locale: 'pt-BR'), class: 'nav-item nav-link' %>

     <% if user_signed_in? %>
     <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'nav-item nav-link') %>
   <% end %>
  </nav>

  <main class="container" role="main">
   <% flash.each do |key, value| %>
     <div class="<%= flash_class(key) %> alert-dismissible fade show" role="alert">
       <%= value %>
     </div>
   <% end %>

    <%= yield %>
  </main>
</body>
</html>
